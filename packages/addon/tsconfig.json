{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": false,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "commonjs",
    "noImplicitAny": true,
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "exclude": ["dist"]
}
